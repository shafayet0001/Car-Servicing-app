<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/car"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="236dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="30dp"
        android:text="Car Servicing"
        android:textColor="@color/teal_700"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="I'm  a Car Owner"
        android:id="@+id/button_for_car_Owner"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/cron"
        app:cornerRadius = "20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="i'm a workshop owner"
        android:id="@+id/button_for_Workshop_owner"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/cron"
        app:cornerRadius = "20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/cron"
        android:textSize="18sp"/>

</LinearLayout>